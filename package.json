{
    "name": "art-museum",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "concurrently 'yarn dev:thumbnailer' 'yarn dev:vite'",
        "dev:thumbnailer": "tsx watch src/thumbnailer.ts",
        "dev:vite": "vite",
        "build": "tsc && vite build",
        "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "test": "vitest run",
        "test:watch": "vitest:watch",
        "e2e": "cypress open --e2e --browser chrome",
        "e2e:run": "cypress run",
        "preview": "vite preview",
        "format": "prettier --write \"src/**/*.{ts,tsx,css,scss,json}\" \"index.html\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx,css,scss,json}\" \"index.html\"",
        "prepare": "husky install",
        "release:patch": "standard-version -r patch",
        "release:minor": "standard-version -r minor",
        "release:major": "standard-version -r major"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "htmlWhitespaceSensitivity": "ignore"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es2020": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:react-hooks/recommended"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module"
        },
        "plugins": [
            "react-refresh"
        ],
        "rules": {
            "react-refresh/only-export-components": "warn",
            "@typescript-eslint/no-empty-interface": "off",
            "no-empty-pattern": "off"
        },
        "ignorePatterns": [
            "dist",
            "node_modules",
            "src/api"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "dependencies": {
        "@heroicons/react": "^2.0.18",
        "@tailwindcss/typography": "^0.5.10",
        "@tanstack/react-query": "^4.35.3",
        "@types/express": "^4.17.18",
        "axios": "^1.5.1",
        "classnames": "^2.3.2",
        "daisyui": "^3.8.1",
        "express": "^4.18.2",
        "formik": "^2.4.5",
        "jotai": "^2.4.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.16.0",
        "react-use": "^17.4.0",
        "sharp": "^0.32.6"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.7.1",
        "@commitlint/config-conventional": "^17.7.0",
        "@openapitools/openapi-generator-cli": "^2.7.0",
        "@testing-library/react": "^14.0.0",
        "@types/react": "^18.2.23",
        "@types/react-dom": "^18.2.8",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "@typescript-eslint/parser": "^6.7.3",
        "@vitejs/plugin-react": "^4.1.0",
        "autoprefixer": "^10.4.16",
        "concurrently": "^8.2.1",
        "cypress": "^13.3.0",
        "eslint": "^8.50.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.3",
        "happy-dom": "^12.2.1",
        "husky": "^8.0.3",
        "postcss": "^8.4.30",
        "prettier": "^3.0.3",
        "sass": "^1.68.0",
        "standard-version": "^9.5.0",
        "tailwindcss": "^3.3.3",
        "tsx": "^3.13.0",
        "typescript": "^5.2.2",
        "vite": "^4.4.9",
        "vitest": "^0.34.5"
    }
}
